{
  "expo": {
    "name": "Flex Route Optimizer",
    "slug": "flex-route-optimizer",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#111827",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.flexrouteoptimizer",
      "infoPlist": {
         "NSLocationWhenInUseUsageDescription": "This app uses your location to optimize routes starting from your current position.",
         "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload route screenshots."
      }
    },
    "android": {
      "package": "com.anonymous.flexrouteoptimizer",
       "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-image-picker",
      "expo-location"
    ]
  }
}
